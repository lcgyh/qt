page {
    background-color: #FFFFFF;
}

.login-box {
    margin-top: 300rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.logo {
    width: 150rpx;
    height: auto;
    margin-bottom: 80rpx;
}

.button-box {
    display: flex;
    width: 70%;
    flex-direction: column;
}

.button-box>button {
    width: 100%;
    border: none;
    padding: 0;
    border-radius: 100px;
    position: relative;
    font-size: 28rpx!important;
    height: 80prx!important;
    line-height: 80rpx!important;
    font-family: PingFangSC-Regular;
}

.button-box>button::after {
    border: none;
    border-radius: 0;
}

.button-box>button:first-child {
    background-color: #00C4B3!important;
    border: 0.5px solid #00C4B3;
    color: #FFFFFF;
    margin-bottom: 30rpx;
}

.button-box>button:last-child {
    border: 0.5px solid #00C4B3;
    color: #00C4B3;
    background-color: transparent!important;
}

.button-hover {
    font-size: 28rpx!important;
    padding: 0;
    border-radius: 0;
    position: relative;
    background-color: transparent;
}

.button-hover::after {
    border: none;
    border-radius: 0;
    background-color: transparent;
}

.showPhoneLogin {
    top: 0!important;
    right: 0!important;
}

.phoneLogin {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.phone-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: auto;
    z-index: 0;
}