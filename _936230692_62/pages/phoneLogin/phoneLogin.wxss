.container {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    overflow: hidden;
    z-index: 0;
}

.login-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: auto;
    z-index: 1;
}

.login-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 0 32rpx;
    z-index: 2;
    background-color: transparent;
}

.logo {
    position: absolute;
    width: 160rpx;
    height: 32px;
    left: 50%;
    margin-left: -80rpx;
    z-index: 2;
    display: flex;
    justify-content: center;
    align-items: center;
}

.logo>image {
    width: 140rpx;
    height: auto;
}

.login-title {
    font-family: PingFangSC-Semibold;
    font-size: 56rpx;
    color: #464646;
    margin-top: 200rpx;
}

.login-content {
    margin-top: 160rpx;
    position: relative;
}

.login-content input {
    font-family: PingFangSC-Medium;
    font-size: 52rpx;
    color: #00C4B3;
}

.input-holder {
    font-family: PingFangSC-Regular;
    font-size: 42rpx;
    color: #9B9B9B;
}

.login-mobile {
    padding-bottom: 36rpx;
}

.login-mobile.inactive {
    border-bottom: 0.5px solid #464646;
}

.login-mobile.active {
    border-bottom: 0.5px solid #00C4B3;
}

.login-mobile>input {
    height: 70rpx;
}

.login-button {
    display: flex;
    align-items: center;
    margin-top: 10rpx;
    height: 120rpx;
}

.login-tips {
    flex: 1;
    font-family: PingFangHK-Regular;
    font-size: 32rpx;
    color: #9B9B9B;
    height: 100%;
    display: flex;
    align-items: center;
}

.login-next {
    font-family: PingFangSC-Regular;
    font-size: 40rpx;
    position: relative;
    padding: 30rpx 40rpx;
}

.login-next.inactive {
    color: #464646;
}

.login-next.inactive:after {
    content: " ";
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    top: 50%;
    right: 3px;
    border-width: 2px 2px 0 0;
    border-color: #464646;
    border-style: solid;
    transform: translateY(-50%) matrix(.71,.71,-.71,.71,0,0);
}

.login-next.active {
    color: #00C4B3;
}

.login-next.active:after {
    content: " ";
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    top: 50%;
    right: 3px;
    border-width: 2px 2px 0 0;
    border-color: #00C4B3;
    border-style: solid;
    transform: translateY(-50%) matrix(.71,.71,-.71,.71,0,0);
}

.next-content {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 0;
    background-color: #000;
    z-index: 3;
    transition: all 0.5s;
}

.next-mobile {
    height: 100rpx;
    margin-bottom: 40rpx;
    overflow: hidden;
}

.next-mobile-title {
    font-family: PingFangHK-Regular;
    font-size: 22rpx;
    color: #9B9B9B;
    margin-bottom: 10rpx;
}

.next-mobile-mobile {
    font-family: PingFangSC-Semibold;
    font-size: 42rpx;
    color: #464646;
}

.nextActive {
    color: #00C4B3;
    padding-right: 60rpx;
}

.nextActive:after {
    content: "";
    position: absolute;
    top: 50%;
    right: 3px;
    width: 28rpx;
    height: 14rpx;
    border: 2px solid #00C4B3;
    border-top: none;
    border-right: none;
    background: transparent;
    transform: rotate(-45deg);
    margin-top: -14rpx;
}

.nextInactive {
    color: #464646;
    padding-right: 60rpx;
}

.nextInactive:after {
    content: "";
    position: absolute;
    top: 50%;
    right: 3px;
    width: 28rpx;
    height: 14rpx;
    border: 2px solid #464646;
    border-top: none;
    border-right: none;
    background: transparent;
    transform: rotate(-45deg);
    margin-top: -14rpx;
}