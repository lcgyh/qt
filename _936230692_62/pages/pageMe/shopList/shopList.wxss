page {
    font-family: DINAlternate-Bold;
}

.search-box {
    padding: 20rpx 40rpx 0;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background-color: #fff;
}

.search-box input {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
    text-align: left;
    border-radius: 20rpx;
    box-shadow: 0 0 50rpx 0 rgba(0,0,0,0.1);
    padding-left: 30rpx;
}

.store-list {
    padding: 100rpx 0 200rpx 0;
}

.store-wrap {
    margin: 40rpx 40rpx 20rpx;
    padding: 40rpx 30rpx;
    background-color: #ffffff;
    border-radius: 24rpx;
    box-shadow: 0 0 50rpx 0 rgba(0,0,0,0.1);
}

.store-name {
    color: #464646;
    font-size: 32rpx;
    line-height: 45rpx;
    letter-spacing: 0;
}

.store-address {
    font-size: 22rpx;
    color: #9B9B9B;
    letter-spacing: 0;
    margin: 10rpx 0 30rpx 0;
}

.store-distance,.store-ontime {
    font-size: 22rpx;
    color: #9B9B9B;
    letter-spacing: 0;
}

.store-distance text,.store-ontime text {
    font-size: 32rpx;
    color: #9B9B9B;
    letter-spacing: 0;
    line-height: 21rpx;
}

.store-ontime {
    margin: 15rpx 0 40rpx 0;
}

.store-pick {
    border-top: 0.5px solid #E2E2E2;
    padding-top: 40rpx;
    text-align: center;
    font-size: 44rpx;
    line-height: 44rpx;
    color: #00C4B3;
}

.tips-box {
    position: fixed;
    left: 0;
    bottom: 0;
    right: 0;
    background-color: #fff;
}

.more-tips {
    position: relative;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 22rpx;
    color: #666666;
    text-align: center;
    padding-bottom: 180rpx;
}

.why-button {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 110rpx;
    background-color: #fff;
}

.why-button>view {
    line-height: 110rpx;
    background: #464646;
    font-size: 40rpx;
    color: #E1DCC7;
    text-align: center;
}

.store-empty {
    margin-top: 300rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-items: center;
}

.store-empty-img {
    width: 200rpx;
}

.store-empty-img image {
    width: 100%;
}

.store-empty-txt {
    font-size: 26rpx;
    color: #464646;
    line-height: 34rpx;
    margin-top: 50rpx;
}

.content {
    padding: 0 100rpx;
}

.content image {
    width: 100%;
    height: auto;
    margin-bottom: 160rpx;
}