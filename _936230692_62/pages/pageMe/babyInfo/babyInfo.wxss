.baby-detail-pages {
    padding: 90rpx 0 0 0;
    font-size: 22rpx;
    color: #9B9B9B;
}

.baby-detail-pages swiper {
    height: 960rpx;
}

.baby-detail-pages swiper swiper-item {
    text-align: center;
}

.baby-detail-pages .item-wrap {
    height: 100%;
    width: 100%;
    padding: 30rpx 30rpx 30rpx 30rpx;
    box-sizing: border-box;
}

.main-content {
    display: inline-block;
    text-align: left;
    width: 600rpx;
    box-shadow: 0 0 30rpx 0 rgba(0,0,0,0.05);
    border-radius: 24rpx;
    padding: 26rpx 25rpx 26rpx;
    box-sizing: border-box;
}

.baby-detail-pages .main-content .edit-btn {
    font-size: 26rpx;
    color: #00C4B3;
    text-align: right;
}

.baby-detail-pages .main-content .photos {
    width: 176rpx;
    height: 176rpx;
    border-radius: 50%;
    border: 1px solid #EEECEC;
    margin: 0 auto 120rpx;
    overflow: hidden;
}

.baby-detail-pages .main-content .photos .photo-baby {
    width: 100%;
    height: 100%;
}

.baby-detail-pages .main-content .row {
    border-bottom: 1px solid #9B9B9B;
    margin-bottom: 40rpx;
}

.baby-detail-pages .main-content .row .label {
    line-height: 40rpx;
    margin-bottom: 10rpx;
}

.baby-detail-pages .main-content .row .field {
    height: 78rpx;
    line-height: 78rpx;
    font-size: 32rpx;
    color: #464646;
}

.baby-detail-pages .submit-btn {
    width: 100%;
    border-radius: 0;
    position: fixed;
    left: 0;
    bottom: 0;
    font-size: 40rpx;
    color: #E1DCC7;
    height: 110rpx;
    line-height: 110rpx;
    background: #464646;
}