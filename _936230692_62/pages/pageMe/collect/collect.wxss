.collect-pages {
}

.collect-pages image {
    width: 100%;
    height: 100%;
}

.collect-pages .handle-wrap {
    padding: 0 40rpx;
    border-bottom: 0.5px solid #E4E4E4;
}

.collect-pages .handle-text {
    font-size: 30rpx;
    color: #464646;
    padding-bottom: 20rpx;
}

.collect-pages .lists {
    padding-top: 60rpx;
}

.collect-pages .lists .item {
    display: flex;
    margin-bottom: 60rpx;
}

.collect-pages .lists .item .check-l {
    padding-left: 40rpx;
    width: 60rpx;
    height: 200rpx;
    display: flex;
    align-items: center;
}

.collect-pages .lists .item .content-r {
    flex: 1;
    height: 200rpx;
    position: relative;
    padding: 0 40rpx 0 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
}

.collect-pages .item .pic-action {
    width: 200rpx;
    height: 200rpx;
    border: 1px solid #E2E2E2;
    border-radius: 24rpx;
    background: #fff;
    box-sizing: border-box;
}

.collect-pages .item .pic-action image {
    border-radius: 24rpx;
}

.bond-logo {
    width: 100%;
    height: 30rpx;
    display: flex;
}

.bond-logo>view {
    display: inline-block;
    text-align: center;
    padding: 2rpx 8rpx;
    font-size: 18rpx;
    margin-right: 6rpx;
    border-radius: 6rpx;
    font-family: PingFangHK-Regular;
    color: #FF7357;
    background-color: #FFEFED;
    white-space: nowrap;
}

.collect-pages .item .content-r .row-one {
    flex: 1;
    font-size: 24rpx;
    color: #464646;
    margin-bottom: 20rpx;
}

.collect-pages .item .content-r .row-two {
    font-size: 18rpx;
    color: #9B9B9B;
    margin-bottom: 56rpx;
}

.collect-pages .item .content-r .row-thr {
    font-size: 18rpx;
    height: 60rpx;
    color: #9B9B9B;
    position: relative;
}

.collect-pages .item .content-r .pro-price {
    font-size: 28rpx;
    color: #333333;
    position: absolute;
    left: 0;
    bottom: 0;
}

.collect-pages .item .content-r .buhuo-wrap {
    width: 100rpx;
    height: 60rpx;
    position: absolute;
    right: 0;
    bottom: 0;
}

.collect-pages .content-r .pro-price .unit,.collect-pages .content-r .pro-price .cross-price,.collect-pages .content-r .pro-price .num,.collect-pages .content-r .pro-price .icon {
    display: inline-block;
    vertical-align: baseline;
}

.collect-pages .content-r .pro-price .cross-price {
    color: #d8d8d8;
    margin-left: 8rpx;
    font-size: 24rpx;
    line-height: 24rpx;
    text-decoration: line-through;
    font-family: Futura-Medium;
}

.collect-pages .content-r .pro-price .num {
}

.collect-pages .content-r .pro-price .icon {
    width: 25rpx;
    height: 25rpx;
    margin-right: 10rpx;
}

.collect-pages .stockout-goods {
    text-align: center;
    font-size: 24rpx;
    color: #333333;
    padding-bottom: 50rpx;
}

.collect-pages .stockout-lists {
    padding-bottom: 120rpx;
}

.btn-list {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 110rpx;
    color: #E1DCC7;
    text-align: center;
    background: #464646;
    display: flex;
}

.btn-list .btn {
    width: 49%;
    line-height: 110rpx;
    text-align: center;
    font-size: 32rpx;
    color: #E1DCC7;
}

.btn-list .btn.line {
    color: #E2E2E2;
    flex: 1;
}

.empty-box {
    text-align: center;
    padding-top: 200rpx;
}

.empty-image {
    margin-bottom: 15rpx;
}

.empty-text {
    font-size: 26rpx;
    color: rgba(70,70,70,.5);
    text-align: center;
}

.empty-navigator {
    margin-top: 40rpx;
    font-size: 32rpx;
    line-height: 40rpx;
    display: inline-block;
}

.empty-navigator navigator.hangout {
    color: #00C4B3;
    border-radius: 100rpx;
    border: 0.5px solid #00C4B3;
    font-size: 24rpx;
    padding: 6rpx 30rpx;
}

.sellout {
    position: absolute;
    right: 0;
    bottom: 4rpx;
    width: 100rpx!important;
    height: auto;
}

checkbox .wx-checkbox-input {
    border-radius: 50%;
    width: 28rpx;
    height: 28rpx;
    border: 1px solid #464646;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    border: 1px solid #00C4B3;
    background: #00C4B3;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    border-radius: 50%;
    width: 28rpx;
    height: 28rpx;
    line-height: 30rpx;
    text-align: center;
    font-size: 20rpx;
    color: #fff;
    background: transparent;
    transform: translate(-50%,-50%) scale(1);
}

checkbox .wx-checkbox-input.wx-checkbox-input-disabled {
    opacity: 0.4;
    background: #E2E2E2;
    border: 1px solid #C9C9C9;
}