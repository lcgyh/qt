.input-box {
    margin-top: 80rpx;
}

.input-title {
    font-family: PingFangHK-Medium;
    font-size: 28rpx;
    color: #464646;
}

.input-content {
    font-family: PingFangHK-Regular;
    font-size: 28rpx;
    color: #464646;
    padding: 18rpx 0;
    border-bottom: 0.5px solid #C9C9C9;
    margin-top: 42rpx;
}

.online-tips {
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    color: #BABABB;
    margin-top: 30rpx;
}

.online-tips>image {
    width: 20rpx;
    height: 20rpx;
    margin-right: 6rpx;
    position: relative;
    top: 2rpx;
}

.idcard-img {
    margin-top: 40rpx;
    display: flex;
}

.idcard-img>view {
    flex: 1;
    height: 200rpx;
    margin-right: 36rpx;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
}

.idcard-img>view:last-child {
    margin-right: 0;
}

.onImg,.offImg {
    width: 100%;
    height: 100%;
}

.camera-upload {
    position: absolute;
    left: -1px;
    top: -1px;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border: 1px dashed #E3E3E3;
    border-radius: 20rpx;
    z-index: 1;
}

.camera-upload>image {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 20rpx;
}

.camera-upload>view {
    font-size: 28rpx;
    color: #D8D8D8;
}

.camera-upload>view>text {
    color: #00C4B3;
}

.upload-cover {
    position: absolute;
    left: -1px;
    top: -1px;
    width: 100%;
    height: 100%;
    background-color: rgba(39,39,39,0.5);
    color: #fff;
    font-size: 28rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 20rpx;
    z-index: 2;
}

.real-name-intro {
    font-family: PingFangHK-Light;
    font-size: 28rpx;
    color: #9B9B9B;
    margin-top: 40rpx;
    padding-bottom: 150rpx;
}

.real-name-intro>view {
    margin-bottom: 40rpx;
}

.real-name-save {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 110rpx;
    background-color: #FFFFFF;
}

.real-name-save>view {
    width: 100%;
    height: 110rpx;
    line-height: 110rpx;
    background-color: #464646;
    font-size: 40rpx;
    color: #E1DCC7;
    text-align: center;
}