.address-list {
    margin-top: 60rpx;
    padding: 0 40rpx 100rpx;
}

.address-block {
    display: flex;
    flex-direction: column;
    padding-bottom: 20rpx;
    margin-bottom: 60rpx;
    border-bottom: 1px solid #e2e2e2;
}

.noTitle {
    font-family: PingFangHK-Regular;
    font-size: 28rpx;
    color: #333333;
    text-align: center;
    margin: 90rpx 0 60rpx 0;
}

.address-allInfo {
    display: flex;
}

.address-radio {
    width: 60rpx;
    display: flex;
    margin-right: 20rpx;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.address-radio>view {
    width: 100%;
    height: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 12rpx;
}

.address-radio>view>checkbox {
    position: relative;
    left: 4rpx;
}

.address-radio>image {
    width: 60rpx;
    height: auto;
}

.address-info {
    flex: 1;
    display: flex;
}

.address-name {
    display: flex;
    font-family: PingFangHK-Medium;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #666666;
    margin-bottom: 6rpx;
    align-items: center;
}

.address-name>view:nth-child(1) {
    margin-right: 40rpx;
}

.address {
    font-family: PingFangHK-Regular;
    font-size: 28rpx;
    color: #666666;
    text-align: justify;
    text-align-last: left;
}

.edit-button {
    font-size: 28rpx;
    color: #666666;
    display: flex;
    align-items: flex-end;
    padding-left: 20rpx;
}

.button {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 110rpx;
    line-height: 110rpx;
    text-align: center;
    background-color: #464646;
    font-size: 44rpx;
    color: #E1DCC7;
}

.empty-box {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    margin-top: 200rpx;
}

.empty-image {
    margin-bottom: 15rpx;
}

.empty-text {
    font-size: 26rpx;
    color: rgba(70,70,70,.5);
    text-align: center;
}

checkbox .wx-checkbox-input {
    border-radius: 50%;
    width: 28rpx;
    height: 28rpx;
    border: 1px solid #c9c9c9;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    border: 1px solid #00C4B3;
    background: #00C4B3;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    border-radius: 50%;
    width: 28rpx;
    height: 28rpx;
    line-height: 30rpx;
    text-align: center;
    font-size: 20rpx;
    color: #fff;
    background: transparent;
    transform: translate(-50%,-50%) scale(1);
}

checkbox .wx-checkbox-input.wx-checkbox-input-disabled {
    opacity: 0.4;
    background: #E2E2E2;
    border: 1px solid #C9C9C9;
}