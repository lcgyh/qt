.refund-title {
    font-family: PingFangHK-Regular;
    font-size: 32rpx;
    color: #464646;
}

.refund-tips {
    font-family: PingFangHK-Regular;
    font-size: 26rpx;
    color: #464646;
    margin: 40rpx 0 120rpx 0;
}

.refund-tips>view {
    margin: 6rpx 0;
}

.refund-tips>view::before {
    content: "";
    display: inline-block;
    width: 6rpx;
    height: 6rpx;
    border-radius: 50%;
    background-color: #464646;
    border: 0.5px solid #464646;
    margin: 0 10rpx 6rpx 0;
}

.reason-title {
    font-family: PingFangHK-Regular;
    font-size: 30rpx;
    color: #464646;
    text-align: center;
}

.radio-group {
    margin-top: 60rpx;
}

.radio-group>label {
    display: flex;
    align-items: center;
    font-family: PingFangHK-Regular;
    font-size: 26rpx;
    color: #464646;
    height: 60rpx;
}

.radio-group>label>text {
    flex: 1;
}

.refund-button {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 110rpx;
    display: flex;
    background-color: #fff;
    align-items: center;
}

.btn {
    width: 1rpx;
    height: 1rpx;
    margin: 0;
    padding: 0;
    border-color: transparent;
    border: none;
    background-color: transparent;
}

.aa {
    height: 110rpx;
    line-height: 110rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    right: 0;
    text-align: center;
    color: #E1DCC7;
    font-size: 42rpx;
    background-color: #464646;
    font-family: PingFangSC-Semibold;
}

.bb {
    bottom: 34px!important;
}

button::after {
    border: none;
}

radio {
    background: none;
}

radio .wx-radio-input.wx-radio-input-checked {
    background-color: #00C4B3!important;
    border-color: #00C4B3!important;
}

.radio {
    transform: scale(0.7);
    margin-left: -15rpx;
    border-radius: 23rpx;
}