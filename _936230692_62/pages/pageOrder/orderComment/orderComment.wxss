.detail-box {
    margin: 40rpx 20px 0;
}

.goods-block {
    display: flex;
    margin-bottom: 50rpx;
    overflow: hidden;
}

.goods-img {
    width: 140rpx;
    height: 140rpx;
    border: 0.5px solid #EEECEC;
    border-radius: 10rpx;
    padding: 20rpx;
    margin-right: 20rpx;
    box-shadow: 0 10rpx 10rpx 0 #F9F9F9;
}

.goods-img image {
    width: 100%;
    height: 100%;
}

.order-content {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.goods-title {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 20rpx;
    color: #333333;
}

.goods-tpye {
    margin-top: 20rpx;
    font-size: 18rpx;
    color: #9B9B9B;
}

.textarea-box {
    padding: 20rpx 20rpx 50rpx;
    height: 200rpx;
    background: #FFFFFF;
    border: 0.5px solid #E2E2E2;
    border-radius: 0 20rpx 20rpx 20rpx;
    position: relative;
}

.goods-list .textarea-box {
    margin-bottom: 80rpx;
}

.allTextarea {
    width: 100%;
    height: 100%;
    font-size: 24rpx;
    color: #464646;
    line-height: 36rpx;
    text-align: justify;
    text-align-last: left;
}

.textarea-length {
    position: absolute;
    right: 30rpx;
    bottom: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 20rpx;
}

.store-box {
    margin: 40rpx 20px 0;
    padding-bottom: 180rpx;
}

.store-name {
    font-size: 36rpx;
    color: #4A4A4A;
    font-weight: bold;
    margin-bottom: 10rpx;
}

.store-box .textarea-box {
    margin-top: 10rpx;
}

.commentButton {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 110rpx;
    line-height: 110rpx;
    text-align: center;
    background-color: #464646;
    font-size: 42rpx;
    color: #E1DCC7;
    font-weight: bold;
}