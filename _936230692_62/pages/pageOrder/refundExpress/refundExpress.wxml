<view>
    <form bindsubmit="formSubmit" class="express-form">
        <view class="title">快递公司</view>
        <view class="input-box">
            <input name="company" placeholder="请填写快递公司" type="text"></input>
        </view>
        <view class="title">快递单号</view>
        <view class="input-box">
            <input name="expressNum" placeholder="请输入快递单号" type="number"></input>
        </view>
        <button class="button" formType="submit">提交</button>
    </form>
</view>
<i-toast id="toast"></i-toast>
<i-loading id="data-loading"></i-loading>
