.menu-button {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 50;
    width: 100%;
    display: flex;
    padding-bottom: 5px;
}

.menu-left-button {
    height: 100%;
    display: flex;
    padding-left: 10px;
    justify-content: flex-start;
    align-items: center;
    font-size: 0;
}

.menu-title {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.menu-title>text {
    width: 100%;
    font-size: 16px;
    color: #fff;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.status-box {
    padding: 140rpx 40rpx 60rpx 40rpx;
    min-height: 110rpx;
}

.status-content {
    display: flex;
    height: 54rpx;
    width: 100%;
    align-items: center;
}

.status-text {
    flex: 1;
    font-family: PingFangSC-Semibold;
    font-size: 42rpx;
    color: #FFFFFF;
}

.status-remark {
    margin-top: 20rpx;
    font-family: PingFangHK-Light;
    font-size: 28rpx;
    color: #FFFFFF;
}

.receive {
    font-family: PingFangHK-Regular;
    font-size: 28rpx;
    color: #666666;
    display: flex;
}

.receive-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 30rpx;
}

.receive-icon image {
    width: 40rpx;
    height: 40rpx;
}

.detail-box {
    margin-top: 80rpx;
    padding: 0 40rpx;
}

.detail-box-title {
    display: flex;
}

.detail-title {
    flex: 1;
    font-family: PingFangHK-Medium;
    font-size: 28rpx;
    color: #464646;
    padding-bottom: 10rpx;
    border-bottom: 0.5px solid #E2E2E2;
}

.detail-box-button {
    display: flex;
}

.detail-box-button>view {
    width: 140rpx;
    height: 50rpx;
    border: 1px solid #c9c9c9;
    border-radius: 100rpx;
    text-align: center;
    line-height: 50rpx;
    font-family: PingFangHK-Regular;
    font-size: 24rpx;
    color: #333333;
}

.refundDesc-box {
    margin-top: 40rpx;
}

.refundDesc {
    font-family: PingFangHK-Regular;
    font-size: 24rpx;
    color: #464646;
    margin-bottom: 10rpx;
    position: relative;
    padding-left: 28rpx;
}

.refundDesc::before {
    content: "";
    position: absolute;
    left: 0;
    top: 10rpx;
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    background-color: #464646;
}

.goods-list {
    margin-top: 40rpx;
}

.goods-block {
    display: flex;
    margin-bottom: 50rpx;
    overflow: hidden;
}

.goods-img {
    width: 180rpx;
    height: 180rpx;
    border: 1px solid #EEECEC;
    border-radius: 10rpx;
    margin-right: 20rpx;
    box-shadow: 0 10rpx 10rpx 0 #F9F9F9;
}

.goods-img image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.order-content {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.goods-title {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 24rpx;
    color: #333333;
}

.goods-tpye {
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #9B9B9B;
}

.price-number {
    display: flex;
}

.goods-price {
    font-family: PingFangHK-Regular;
    flex: 1;
    font-size: 28rpx;
    color: #333333;
}

.goods-number {
    width: 40rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    color: #333333;
    font-size: 28rpx;
    flex: 1;
    text-align: right;
}

.detail-summary {
    margin-top: 70rpx;
    padding: 0 40rpx;
}

.detail-summary-title {
    display: flex;
    margin-bottom: 40rpx;
}

.summary {
    display: flex;
    margin-bottom: 30rpx;
    color: #9B9B9B;
}

.summary-title,.summary-value {
    font-family: PingFangHK-Regular;
    font-size: 24rpx;
}

.summary-title {
    flex: 1;
}

.status-button {
    display: flex;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    background-color: #fff;
    padding: 0 40rpx;
    justify-content: flex-end;
    align-items: center;
    border-top: 0.5px solid #d9d9d9;
}

.status-button>view {
    width: 140rpx;
    height: 50rpx;
    border: 0.5px solid #c9c9c9;
    border-radius: 100rpx;
    text-align: center;
    line-height: 50rpx;
    font-family: PingFangHK-Regular;
    font-size: 24rpx;
}

.status-button>view.left-button {
    color: #464646;
}

.status-button>view.right-button {
    margin-left: 20rpx;
    color: #00C4B3;
    border-color: #00C4B3!important;
}