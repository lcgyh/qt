}

.search-wrap {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 30;
    transition: all 0.2s;
    font-size: 0;
    background-repeat: no-repeat;
    background-size: cover;
}

.search-wrap>image {
    width: 100%;
    height: 60px;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
}

.search {
    font-family: PingFangHK-Regular;
    margin: 9px 32rpx;
    height: 42px;
    font-size: 28rpx;
    color: #C9C9C9;
    line-height: 35px;
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    background-color: #FFFFFF;
    position: relative;
}

.search-text {
    flex: 1;
    display: flex;
    align-items: center;
}

.search-text>image {
    width: 26rpx;
    height: 26rpx;
    margin: 0 20rpx 0 30rpx;
}

.hasBg {
    background-color: transparent;
}

.hasBg .search {
    background-color: #FFFFFF;
}

.noBg {
    background-color: #FFFFFF;
}

.noBg .search {
    background-color: #F8F8F8;
}

.scan {
    width: 100rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.scan-line {
    width: 0.5px;
    height: 30rpx;
    background-color: #C9C9C9;
    position: absolute;
    left: 0;
    top: 50%;
    transform: translate(0,-50%);
}

.scan>image {
    width: 28rpx;
    height: auto;
}

.swiper-box {
    margin-top: 60px;
    padding-bottom: 20rpx;
    position: relative;
    overflow: hidden;
    background-repeat: no-repeat;
    background-size: cover;
}

.swiper-top-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: auto;
    z-index: 0;
}

.swiper-box swiper {
    height: 360rpx;
    margin-top: 20rpx;
}

.swiper-box swiper swiper-item {
    text-align: center;
}

.swiper-box swiper swiper-item>view {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
    overflow: hidden;
}

.slide-image {
    width: 90%;
    height: 100%;
    border-radius: 20rpx;
}

.slide-image.active {
    width: 100%;
    height: 100%;
}

.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal {
    position: absolute;
    bottom: 14rpx;
    z-index: 10;
}

.swiper-box .wx-swiper-dot {
    width: 14rpx;
    display: inline-flex;
    height: 14rpx;
    margin-left: 4rpx;
    justify-content: space-between;
    border-radius: 50%;
}

.swiper-box .wx-swiper-dot::before {
    content: "";
    flex-grow: 1;
    border-radius: 50%;
    opacity: 0.3;
    background: #fff;
}

.swiper-box .wx-swiper-dot-active::before {
    opacity: 1;
    border-radius: 50%;
}

.tips {
    display: flex;
}

.tips>image {
    width: 100%;
    height: auto;
}

.classify {
    display: flex;
    padding: 20rpx 32rpx;
    position: relative;
}

.classify>view {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-right: 54rpx;
    width: 130rpx;
}

.classify>view:last-child {
    margin-right: 0;
}

.classify>view>image {
    width: 120rpx;
    height: 120rpx;
}

.classify>view>text {
    width: 100%;
    display: block;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    margin-top: 16rpx;
    text-align: center;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.new-gift {
    overflow: hidden;
