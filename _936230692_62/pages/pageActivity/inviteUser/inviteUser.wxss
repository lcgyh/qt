page {
    background-color: #FFEDED;
}

.activity-end {
    margin-top: 300rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.activity-end>image {
    width: 360rpx;
    height: auto;
}

.activity-end>view {
    width: 186rpx;
    height: 60rpx;
    border-radius: 100rpx;
    text-align: center;
    line-height: 60rpx;
    border: 0.5px solid #00C4B3;
    color: #00C4B3;
    font-size: 26rpx;
    margin-top: 50rpx;
}

.active-rule {
    position: fixed;
    right: 0;
    font-size: 0;
    z-index: 20;
}

.active-rule>image {
    width: 150rpx;
    height: auto;
}

.section-head {
    font-size: 0;
    position: relative;
    overflow: hidden;
    height: 1340rpx;
}

.head-bg {
    width: 100%;
    height: auto;
}

.invite-box {
    position: relative;
    top: -230rpx;
}

.redbag-bg {
    width: 100%;
    height: auto;
}

.invite-step {
    font-family: PingFangSC-Light;
    font-size: 20rpx;
    color: #615E6B;
    text-align: center;
    position: absolute;
    z-index: 1;
    left: 0;
    top: 20rpx;
    width: 100%;
}

.invite-button {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 160rpx;
    left: 0;
    z-index: 1;
}

.invite-user {
    background-color: #FFFFFF;
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.06);
    border-radius: 50px;
    width: 480rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #EF546B;
    font-family: PingFangSC-Semibold;
    font-size: 48rpx;
}

.invite-other {
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    margin-top: 10rpx;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0.8;
    color: #FFFFFF;
}

.invite-other view {
    width: 180rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    text-decoration: underline;
}

.soft-line {
    position: absolute;
    right: 0;
    bottom: -10rpx;
}

.soft-line>image {
    width: 240rpx;
    height: auto;
}

.section-sign {
    margin-top: 80rpx;
    position: relative;
    padding-bottom: 80rpx;
    overflow: hidden;
}

.sign-title {
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: PingFangSC-Medium;
    font-size: 40rpx;
    color: #321D19;
}

.coin-left {
    width: 60rpx;
    height: 60rpx;
    margin-right: 14rpx;
    margin-bottom: 6rpx;
}

.coin-right {
    width: 30rpx;
    height: 30rpx;
    margin-left: 8rpx;
}

.sign-content {
    display: flex;
    background: #F9656F;
    box-shadow: -9px 2px 20px 0 rgba(0,0,0,0.09);
    border-radius: 24rpx;
    color: #fff;
    height: 200rpx;
    margin: 50rpx 40rpx 0;
}

.content-left {
    background: #EC4A55;
    border-radius: 24rpx;
    width: 356rpx;
    padding: 32rpx 0 32rpx 38rpx;
    position: relative;
}

.content-left>view {
    background-color: #fff;
    border-radius: 10rpx 0 0 10rpx;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.content-left>view>image {
    width: 80rpx;
    height: 80rpx;
    margin: 0 6rpx 0 20rpx;
}

.content-left>view>view {
    font-family: PingFangSC-Semibold;
    font-size: 28rpx;
    color: #ED5761;
}

.content-left>view>view>text {
    font-size: 50rpx;
}

.content-right {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: PingFangSC-Medium;
    font-size: 26rpx;
    color: #FFFFFF;
    position: relative;
    z-index: 2;
    box-shadow: -6px 0 16px 0 rgba(236,121,93,0.25);
}

.section-list {
    position: relative;
    padding-bottom: 100rpx;
    overflow: hidden;
}

.list {
    background: #FFFFFF;
    border-radius: 24rpx;
    padding: 60rpx 50rpx;
    margin: 50rpx 40rpx 0;
    position: relative;
    box-shadow: 0 0 30px 0 rgba(236,121,93,0.1);
}

.listNone {
    font-family: PingFangSC-Semibold;
    font-size: 30rpx;
    color: #ED5761;
    text-align: center;
}

.list-invite-user {
    background-color: #FFFFFF;
    width: 200rpx;
    height: 50rpx;
    text-align: center;
    line-height: 70rpx;
    font-size: 20rpx;
    font-family: PingFangSC-Light;
    color: #ED5761;
    margin-top: 10rpx;
    text-decoration: underline;
}

.list-invite-user::after {
    border: none;
}

.inviter-block {
    display: flex;
    align-items: center;
    border-bottom: 0.5px solid rgba(151,151,151,0.5);
    margin-bottom: 18rpx;
    padding-bottom: 18rpx;
}

.list .inviter-block:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
}

.inviter-avatar,.inviter-avatar image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.inviter-detail {
    flex: 1;
    text-align: right;
}

.inviter-time {
    opacity: 0.8;
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    color: #4A4A4A;
    margin-bottom: 10rpx;
}

.inviter-get {
    font-family: PingFangSC-Medium;
    font-size: 22rpx;
    color: #4A4A4A;
}

.inviter-get>text {
    color: #ED5761;
}

.list-arrow {
    font-family: PingFangSC-Regular;
    font-size: 20rpx;
    color: #9B9B9B;
    height: 100rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.list-arrow>image {
    width: 20rpx;
    height: 20rpx;
}

.arrowB {
    margin: 0 0 2rpx 16rpx;
}

.arrowT {
    margin: 0 0 4rpx 16rpx;
}

.section-foot {
    display: flex;
    justify-content: center;
    padding-bottom: 80rpx;
}

.section-foot>image {
    width: 180rpx;
    height: auto;
}

.clone-icon {
    text-align: right;
    padding-bottom: 10rpx;
}

.rule-content {
    background: rgba(252,252,252,0.80);
    background: #FFFFFF;
    border-radius: 24rpx;
}

.rule-content-title,.rule-content-foot {
    font-size: 34rpx;
    color: #4A4A4A;
    text-align: center;
    padding: 32rpx 0;
}

.rule-content-title {
    font-family: PingFangSC-Semibold;
}

.rule-content-foot {
    font-family: PingFangHK-Regular;
}

.rule-content-content {
    width: 476rpx;
    height: 680rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #666666;
    border-bottom: 0.5px solid rgba(77,77,77,0.3);
    border-top: 0.5px solid rgba(77,77,77,0.3);
    padding: 32rpx;
    line-height: 40rpx;
}

.status-wrap>image {
    width: 100%;
    height: auto;
}

.status-text {
    margin: 70rpx 0 60rpx 0;
    text-align: center;
    font-family: PingFangSC-Medium;
    font-size: 30rpx;
    color: #000000;
}

.status-text-two {
    margin-top: 10rpx;
}

.status-button {
    display: flex;
    justify-content: center;
    padding-bottom: 50rpx;
}

.status-button>view {
    width: 300rpx;
    height: 64rpx;
    text-align: center;
    line-height: 64rpx;
    border-radius: 32rpx;
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #FFFFFF;
    background-color: #ED5761;
}