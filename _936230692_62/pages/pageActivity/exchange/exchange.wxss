.sign-number {
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #464646;
    margin-top: 40rpx;
    padding-bottom: 20rpx;
    border-bottom: 0.5px solid rgba(226,226,226,0.5);
}

.goods-block {
    padding: 40rpx 0;
    display: flex;
    overflow: hidden;
    border-bottom: 0.5px solid rgba(226,226,226,0.5);
}

.goods-block:last-child {
    border-bottom: none;
}

.goods-img {
    width: 180rpx;
    height: 180rpx;
    border-radius: 16rpx;
    border: 0.5px solid rgba(226,226,226,0.5);
    margin-right: 28rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 0;
}

.goods-img image {
    width: 95%;
    height: 95%;
    border-radius: 16rpx;
}

.title {
    font-family: PingFangHK-Semibold;
    font-size: 70rpx;
    color: #00C4B3;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    position: relative;
}

.title>text {
    font-family: PingFangHK-Semibold;
    font-size: 26rpx;
    color: #00C4B3;
    width: 24rpx;
    position: absolute;
    left: -24rpx;
    top: 14rpx;
}

.subtitle {
    font-family: PingFangHK-Regular;
    font-size: 24rpx;
    color: #00C4B3;
}

.goods-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    position: relative;
}

.goods-titlle {
    font-family: PingFangHK-Regular;
    font-size: 24rpx;
    color: #333333;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
}

.goods-intro {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #C9C9C9;
    margin-top: 6rpx;
}

.goods-price {
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    color: #C9C9C9;
    margin-top: 4rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
}

.priceType {
    text-decoration: line-through;
}

.goods-exchange {
    ont-family: PingFangHK-Regular;
    font-size: 28rpx;
    color: #EF546B;
    flex: 1;
    display: flex;
    align-items: flex-end;
}

.goods-button {
    position: absolute;
    right: 0;
    bottom: 0;
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    border-radius: 30rpx;
    width: 160rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    color: #fff;
}

.hasExchange {
    background: #EF546B;
}

.noExchange {
    background: #BABABB;
}

.exchange-rule {
    margin-top: 60rpx;
    padding-bottom: 100rpx;
}

.rule-title {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #9B9B9B;
}

.rule-content {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #9B9B9B;
    margin-top: 15rpx;
}

.rule-content>view {
    margin-bottom: 10rpx;
    display: flex;
}

.rule-content>view:last-child {
    margin-bottom: 0;
}

.rule-content>view>text {
    padding-right: 6rpx;
}

.showSuccess-content {
    background-color: #fff;
    border-radius: 24rpx;
    padding: 60rpx 40rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.success-title {
    font-family: PingFangSC-Semibold;
    font-size: 34rpx;
    color: #4A4A4A;
    margin-bottom: 16rpx;
}

.success-tips {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #4A4A4A;
    margin-bottom: 40rpx;
}

.success-img {
    width: 200rpx;
    height: 180rpx;
    margin-bottom: 60rpx;
}

.success-button {
    width: 380rpx;
    height: 70rpx;
    text-align: center;
    line-height: 70rpx;
    color: #fff;
    background: #EF546B;
    border-radius: 37px;
}

.previewImg {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.previewImg .slide-image {
    width: 100%;
    height: 300px;
    background-color: #fff;
}

.showPreviewImg {
    top: 0!important;
    right: 0!important;
}