.head {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    background-color: #fff;
}

.input-box {
    border: 0.5px solid #E2E2E2;
    border-radius: 14rpx;
    position: absolute;
    left: 40rpx;
    top: 24rpx;
    z-index: 1;
    height: 70rpx;
    width: 62%;
    background-color: #fff;
}

.focus {
    width: 79%;
    border-color: #9a9a9a;
}

.unfocus {
    width: 56%;
    border-color: #E2E2E2;
}

.input-box>input {
    position: absolute;
    left: 20rpx;
    right: 0;
    top: 0;
    font-family: PingFangHK-Regular;
    font-size: 24rpx;
    height: 70rpx;
    line-height: 70rpx;
    color: #464646;
    min-height: 0;
    background: transparent;
    z-index: 2;
    padding-right: 70rpx;
}

.clear {
    position: absolute;
    right: 0;
    top: 0;
    z-index: 2;
    height: 70rpx;
    line-height: 70rpx;
    width: 70rpx;
    text-align: center;
    font-size: 24rpx;
}

.input-back {
    position: absolute;
    color: #C9C9C9;
    height: 70rpx;
    left: 20rpx;
    top: 0;
    line-height: 0;
    z-index: 1;
    font-family: PingFangHK-Regular;
    font-size: 24rpx;
    display: flex;
    align-items: center;
}

.input-cancel {
    position: absolute;
    right: 20rpx;
    top: 24rpx;
    height: 73rpx;
    display: flex;
    align-items: center;
    z-index: 1;
    font-size: 24rpx;
    padding: 0 20rpx;
}

.sort-type {
    position: absolute;
    right: 40rpx;
    top: 24rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #cccccc;
    display: flex;
    transition: all .3s;
}

.sort-type>view:nth-child(2) {
    margin: 0 8rpx;
}

.sort-type>view.active {
    color: #4A4A4A!important;
}

.brand-list {
    width: 100%;
    padding: 140rpx 40rpx 0;
    min-height: 100rpx;
    box-sizing: border-box;
    overflow: hidden;
    display: flex;
    flex-wrap: wrap;
}

.brand-block {
    width: 210rpx;
    margin: 0 20rpx 60rpx 0;
}

.brand-block:nth-child(3n) {
    margin-right: 0;
}

.brand-img {
    width: 100%;
    height: 140rpx;
    border: 0.5px solid #C9C9C9;
    border-radius: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.brand-img image {
    width: 94%;
    height: 94%;
}

.brand-name {
    font-family: PingFangHK-Regular;
    font-size: 26rpx;
    color: #464646;
    margin-top: 20rpx;
    text-align: center;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
}