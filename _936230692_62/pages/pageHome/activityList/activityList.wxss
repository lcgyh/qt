page {
    background-color: #F9F9F9;
}

.activity-pic {
    font-size: 0;
    width: 100%;
    height: auto;
}

.activity-pic>image {
    width: 100%;
    height: auto;
}

.activity-area-tip {
    background-color: #FFF7D9;
    padding: 16rpx 32rpx;
    border-top: 0.5px solid #FFE583;
    border-bottom: 0.5px solid #FFE583;
}

.activity-area-title {
    font-family: PingFangSC-Medium;
    font-size: 26rpx;
    color: #464646;
}

.activity-area-time {
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    color: #9B9B9B;
    margin-top: 6rpx;
}

.classify-title {
    background-color: #fff;
    z-index: 1;
}

.classify-title .van-tab {
    font-size: 32rpx!important;
    height: 44px;
    overflow: hidden;
    color: #4A4A4A;
}

.classify-title .van-tab.van-tab--active {
    color: #4A4A4A;
    font-weight: bold;
}

.van-tabs__line {
    background-color: #00C4B3!important;
}

.shop-list {
    padding: 32rpx;
}

.shopping-list {
    width: 100%;
    padding: 16rpx 32rpx 60rpx;
    min-height: 100rpx;
    box-sizing: border-box;
    overflow: hidden;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.shopping-block {
    width: 304rpx;
    background-color: #FFFFFF;
    border-radius: 12rpx;
    padding: 0 16rpx 24rpx;
    margin-bottom: 16rpx;
}

.shopping-img {
    width: 304rpx;
    height: 304rpx;
    position: relative;
}

.shopping-img>image {
    width: 100%;
    height: 100%;
}

.home_bh {
    position: absolute;
    width: 50%!important;
    height: 50%!important;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.activity-float {
    position: absolute;
    left: 0;
    top: 0;
    width: 70rpx!important;
    height: 50rpx!important;
}

.bond-logo {
    width: 100%;
    height: 30rpx;
    display: flex;
}

.bond-logo>view {
    display: inline-block;
    text-align: center;
    padding: 2rpx 8rpx;
    font-size: 18rpx;
    margin-right: 6rpx;
    border-radius: 6rpx;
    font-family: PingFangHK-Regular;
    color: #FF7357;
    background-color: #FFEFED;
    white-space: nowrap;
}

.shopping-title {
    font-size: 24rpx;
    color: #464646;
    min-height: 64rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
}

.shopping-title>image {
    width: 34rpx;
    height: auto;
    margin-right: 4rpx;
    font-size: 0;
    position: relative;
    top: 8rpx;
}

.shopping-member {
    width: 24rpx;
    height: 24rpx;
    margin-right: 2rpx;
    display: inline-block;
    vertical-align: baseline;
}

.shopping-member image {
    width: 100%;
    height: 100%;
    border: none;
    display: block;
}

.shopping-price-box {
    display: flex;
    align-items: flex-end;
}

.shopping-price-box .shopping-price {
    font-size: 28rpx;
    line-height: 32rpx;
    height: 32rpx;
    color: #333333;
    display: inline-block;
    vertical-align: baseline;
    font-family: Futura-Medium;
}

.shopping-price-box .shopping-cross-price {
    margin-left: 8rpx;
    font-size: 24rpx;
    line-height: 24rpx;
    text-decoration: line-through;
    color: #d8d8d8;
    display: inline-block;
    vertical-align: baseline;
    font-family: Futura-Medium;
}

.footer {
    text-align: center;
    font-family: PingFangHK-Regular;
    font-size: 28rpx;
    color: #C9C9C9;
    padding: 40rpx 0 80rpx 0;
}

.goods-block {
    width: 100%;
    display: flex;
    overflow: hidden;
    background-color: #FFFFFF;
    border-radius: 12rpx;
    margin-bottom: 16rpx;
}

.goods-img {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
    padding: 20rpx;
    margin-right: 20rpx;
    position: relative;
}

.goods-img image {
    width: 100%;
    height: 100%;
}

.order-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 32rpx 0;
}

.goods-title {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 28rpx;
    color: #464646;
    word-break: break-all;
}

.goods-title>image {
    width: 34rpx;
    height: auto;
    margin-right: 4rpx;
    font-size: 0;
    position: relative;
    top: 6rpx;
}

.goods-display {
    font-family: PingFangHK-Regular;
    font-size: 22rpx;
    color: #9B9B9B;
    margin-top: 8rpx;
}

.price-number {
    display: flex;
}

.goods-price {
    font-family: Futura-Medium;
    flex: 1;
    font-size: 32rpx;
    color: #464646;
}

.goods-price>text {
    font-size: 16rpx;
    font-weight: normal;
}

.add-cart {
    display: flex;
    width: 50rpx;
    height: 50rpx;
    justify-content: center;
    align-items: center;
    justify-self: flex-end;
    padding-right: 32rpx;
}

.add-cart>image {
    width: 40rpx;
    height: 40rpx;
}

.share-button {
    position: fixed;
    right: 0;
    top: 280rpx;
    z-index: 30;
}

.share-button>image {
    width: 150rpx;
    height: auto;
}