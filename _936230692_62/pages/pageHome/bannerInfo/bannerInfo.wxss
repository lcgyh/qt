page {
    background-color: #F9F9F9;
}

.menu-button {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10000;
    width: 100%;
    background-color: #fff;
    display: flex;
    padding-bottom: 5px;
}

.menu-left-button {
    height: 100%;
    padding-left: 10px;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.menu-left-button>image {
    width: 20rpx;
    height: auto;
}

.menu-title {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.menu-title>text {
    width: 100%;
    font-size: 16px;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.bannerImg {
    width: 100%;
    overflow: hidden;
    font-size: 0;
}

.bannerImg image {
    width: 100%;
    height: auto;
}

.bannerTxt {
    margin: 16rpx 32rpx 0;
    font-size: 28rpx;
    color: #464646;
    line-height: 50rpx;
    background-color: #FFFFFF;
    border-radius: 12rpx;
    padding: 32rpx 16rpx;
    text-align: justify;
    text-align-last: left;
}

.bannerRule-wrap {
    margin: 16rpx 32rpx 0;
    background-color: #FFFFFF;
    border-radius: 12rpx;
    padding: 32rpx 16rpx;
}

.bannerRule {
    font-size: 40rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #464646;
    font-weight: bold;
    margin-bottom: 16rpx;
}

.bannerRuleTxt {
    font-size: 26rpx;
    color: #9B9B9B;
    line-height: 50rpx;
}

.bannerGoods {
    margin: 16rpx 32rpx 0;
}

.goods-block {
    display: flex;
    overflow: hidden;
    background-color: #FFFFFF;
    border-radius: 12rpx;
}

.goods-img {
    width: 276rpx;
    height: 276rpx;
    border-radius: 10rpx;
    padding: 10rpx;
    margin-right: 20rpx;
    position: relative;
}

.goods-img image {
    width: 100%;
    height: 100%;
}

.order-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 30rpx 0;
}

.goods-title {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 28rpx;
    color: #464646;
    word-break: break-all;
}

.goods-title>image {
    width: 34rpx;
    height: auto;
    margin-right: 4rpx;
    font-size: 0;
    position: relative;
    top: 6rpx;
}

.price-number {
    display: flex;
}

.goods-price {
    font-family: Futura-Medium;
    flex: 1;
    font-size: 32rpx;
    color: #464646;
}

.goods-price>text {
    font-size: 16rpx;
    font-weight: normal;
}

.shopping-list,.brand-list {
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.brand-list {
    padding: 60rpx 40rpx;
}

image {
    width: 100%;
    height: 100%;
}

.shopping-block {
    width: 302rpx;
    padding: 0 16rpx 24rpx;
    background-color: #FFFFFF;
    border-radius: 12rpx;
}

.shopping-img {
    width: 302rpx;
    height: 302rpx;
    position: relative;
}

.shopping-title {
    font-size: 24rpx;
    color: #464646;
    min-height: 64rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
}

.shopping-title>image {
    width: 34rpx;
    height: auto;
    margin-right: 4rpx;
    font-size: 0;
    position: relative;
    top: 6rpx;
}

.activity-float {
    position: absolute;
    left: 0;
    top: 0;
    width: 80rpx!important;
    height: auto;
}

.bond-logo {
    width: 100%;
    height: 30rpx;
    display: flex;
}

.bond-logo>view {
    display: inline-block;
    text-align: center;
    padding: 2rpx 8rpx;
    font-size: 18rpx;
    margin-right: 6rpx;
    border-radius: 6rpx;
    font-family: PingFangHK-Regular;
    color: #FF7357;
    background-color: #FFEFED;
    white-space: nowrap;
}

.shopping-member {
    width: 24rpx;
    height: 24rpx;
    margin-right: 8rpx;
    display: inline-block;
    vertical-align: baseline;
}

.shopping-member image {
}

.shopping-price-box .shopping-price {
    font-size: 28rpx;
    line-height: 32rpx;
    height: 32rpx;
    color: #333333;
    display: inline-block;
    vertical-align: baseline;
    font-family: Futura-Medium;
}

.shopping-price-box .shopping-cross-price {
    margin-left: 8rpx;
    font-size: 24rpx;
    line-height: 24rpx;
    text-decoration: line-through;
    display: inline-block;
    vertical-align: baseline;
    color: #d8d8d8;
    font-family: Futura-Medium;
}

.home_bh {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 50%!important;
    height: 50%!important;
    transform: translate(-50%,-50%);
}

.share-button {
    position: fixed;
    right: 0;
    top: 280rpx;
    z-index: 30;
}

.share-button>image {
    width: 150rpx;
    height: auto;
}

.sell-title {
    display: flex;
    align-items: center;
    padding-bottom: 20rpx;
    position: relative;
    margin: 0 40rpx;
}

.sell-title::after {
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    content: " ";
    border-top: 1px solid #e2e2e2;
}

@media (-webkit-min-device-pixel-ratio:1.5),(min-device-pixel-ratio:1.5) {
    .sell-title::after {
        transform: scaleY(0.7);
    }
}

@media (-webkit-min-device-pixel-ratio:2),(min-device-pixel-ratio:2) {
    .sell-title::after {
        transform: scaleY(0.5);
    }
}

.sell-title .sell-title-name {
    font-family: PingFangHK-Semibold;
    font-size: 42rpx;
    color: #464646;
    flex: 1;
}