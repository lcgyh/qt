.i-good-list {
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.i-good-block {
    width: 302rpx;
    padding: 0 16rpx 24rpx;
    background-color: #FFFFFF;
    border-radius: 12rpx;
    margin-bottom: 16rpx;
}

.i-good-block-img-box {
    width: 302rpx;
    height: 302rpx;
    position: relative;
}

.i-good-block-img {
    width: 100%;
    height: 100%;
}

.i-good-block-noQty {
    position: absolute;
    width: 50%;
    height: 50%;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.i-good-block-float {
    position: absolute;
    left: 0;
    top: 0;
    width: 60rpx;
    height: auto;
}

.i-good-block-name {
    font-family: PingFangHK-Regular;
    font-size: 26rpx;
    color: #464646;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
    min-height: 72rpx;
}

.i-good-block-name>image {
    width: 34rpx;
    height: auto;
    margin-right: 4rpx;
    font-size: 0;
    position: relative;
    top: 6rpx;
}

.i-good-block-tag {
    font-size: 0;
    margin: 8rpx 0;
    min-height: 26rpx;
}

.i-good-block-tag>view {
    display: inline-block;
    text-align: center;
    padding: 2rpx 8rpx;
    font-size: 18rpx;
    margin-right: 6rpx;
    border-radius: 6rpx;
    font-family: PingFangHK-Regular;
    color: #FF7357;
    background-color: #FFEFED;
    white-space: nowrap;
}

.i-good-block-price-box {
    display: flex;
    align-items: center;
    font-size: 0;
}

.i-good-block-price {
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #464646;
}

.i-good-block-price>text {
    font-size: 24rpx;
    color: #C9C9C9;
    text-decoration: line-through;
    margin-left: 6rpx;
}