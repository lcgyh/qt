.navbar {
  width: 100%;
  height: 44px;
  background: white;
  position: fixed;
  display: flex;
  justify-content: flex-start;
  border-bottom: 1rpx solid #eee;
  text-align: center;
  /* align-items:center; */
}

.navbarItem {
  width: 20%;
  height: 44px;
  text-align: center;
  line-height: 44px;
}

.line {
  background: red;
  height: 2px;
  width: 20%;
  position: fixed;
  top: 42px;
}

.listView {
  padding-top: 44px;
  width: 100%;
}

.listItem {
  width: 100vw;
  height: 72px;
  background-color: white;
  display: flex;
  flex-direction: column;
  border-top: 5px solid #f7f7f7;
}

.item {
  height: 24px;
  line-height: 20px;
  margin-left: 10px;
}

.listItemT {
  width: 100vw;
  height: 96px;
  background-color: white;
  display: flex;
  flex-direction: column;
  border-top: 5px solid #f7f7f7;
}

.sendTime {
  display: flex;
  flex-direction: row;
}

.sendTimeText {
  margin-left: 30px;
}

.row_right {
  height: 20px;
  width: 20px;
  line-height: 72px;
  position: fixed;
  float: right;
  right: 10px;
  margin-top: 26px;
}

.status {
  height: 24px;
  line-height: 72px;
  position: fixed;
  float: right;
  right: 10px;
}


