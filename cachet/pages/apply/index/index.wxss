.listItem {
  width: 100vw;
  border-bottom: 0.5px solid #999;
  line-height: 44px;
  padding-left: 12px;
  display: flex;
  flex-wrap: wrap;
  color: #333;
  justify-content: space-between;
}

.item {
  height: 24px;
  line-height: 24px;
  margin-left: 10px;
}

.listImage {
  width: 40px;
  height: 40px;
  margin-left: 10px;
  margin-top: 2px;
}

.selectBtn {
  color: white;
  background: red;
  height: 40px;
  width: 150px;
  border-radius: 5px;
  margin-top: 80px;
  line-height: 40px;
  text-align: center;
}

.right {
  color: #333;
  margin-right: 25px;
}

.selectView {
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.rightInput {
  width: 100px;
  margin-right: 25px;
  text-align: right;
  height: 44px;
  line-height: 40px;
}

.rightInputReson {
  margin-right: 25px;
  width: 200px;
  text-align: right;
  height: 44px;
  line-height: 40px;
}

.showPicker {
  background: white;
  width: 100vw;
  height: 300px;
  margin-bottom: 0px;
}

.maskView {
  width: 100vw;
  height: 100vh;
  top: 0px;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
  position: fixed;
  margin-top: 0px;
  display: flex;
  flex-direction:column-reverse;
}

.sureBtnView{
  width: 100%;
  height: 40px;
  background:white;
  color: red;  
}
.sureBtn{
  width: 80px;
  height: 30px;
  line-height: 30px;
  float: right;
  text-align: right;
  margin-right: 12px;
  margin-top: 12px;
}
.imageCell{
  display: flex;
  flex-direction:row-reverse;
  justify-content: flex-start;
  flex-wrap:wrap-reverse;
  margin-right: 24px;
}