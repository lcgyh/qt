<view class='login_box'>
  <image src='/images/logo.png' class='logo'/>
  <form bindsubmit="formSubmit">
    <view class='login_form'>
      <view class="inputView">
        <image class="nameImage" src="/images/user.png"></image>
        <input type='number' placeholder='请输入您的手机号码' name='username' value='{{username}}' bindinput='bintusername' bindblur='userNameInputEnd'/>
      </view>
      
      <view class="inputView new_input">
        <image class="nameImage" src="/images/password.png"></image>
        <input type='text' placeholder='请输入验证码' name='smsCode' class='count_input'/>
        <span catchtap="generateVerifyCode" class="button_btn {{timeCountDown?'gray':''}}">{{timeCountDown?timeCount:'获取验证码'}}</span>
      </view>
      
      <view class="inputView">
        <image class="nameImage" src="/images/password.png"></image>
        <input type='password' placeholder='请输入新的登陆密码' name='password' />
      </view>
      
      <view class="inputView">
        <image class="nameImage" src="/images/password.png"></image>
        <input type='password' placeholder='请再次输入新的登陆密码' name='password1' />
      </view>

      <button class='submit' form-type='submit'>提交</button>
    </view>
  </form>
</view>
