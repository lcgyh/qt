<!--pages/me/me.wxml-->
<view class='bgfff'>
  <view class='me_top'>
    <view class='header_img' catchtap='chose_avatar'>
      <image wx:if='{{party.portrait}}' src='{{party.portrait}}'></image>
      <image wx:else src='/images/people.png'></image>
    </view>
    <text class='font_size30' wx:if="{{party.name}}">{{party.name}}</text>
    <text class='font_size30' wx:if="{{!party.name}}">未登录</text>
  </view>
  <image bindtap="showQRcode" class="qrcode" src='/images/qrcode.png'></image>
</view>

<navigator url='../company/company' wx:if="{{party.companyName}}">
  <view class='nav_block row_right titleText'>
    <view class='left'>
      <text class='iconfont icon-gongsi'></text>
      <view>{{party.companyName}}</view>
    </view>
  </view>
</navigator>
