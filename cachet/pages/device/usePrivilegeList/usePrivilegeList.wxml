<!--pages/device/usePrivilegeList/usePrivilegeList.wxml-->
<view class='listView'>
  <view class='cengk_box' wx:for="{{array}}" wx:key="cardlist">
    <view data-id='{{item.id}}' bindtap="checkDetail" data-id="{{index}}">
      <view class='listItem'>
        <view class="column">
          <view class='item'>{{item.name}}</view>
          <view class='item'>保管员：{{item.userName}}</view>
        </view>
        <view class="row">
          <view class='status' style="color:red" wx:if="{{item.status == '待同步' || item.status == '待录入'}}">{{item.status}}</view>
          <view class='status' wx:if="{{item.status != '待同步' && item.status != '待录入'}}">{{item.status}}</view>
          <image class='row_right' src='../../../images/row_right.png' mode='aspectFill'></image>
        </view>
      </view>
    </view>
  </view>
</view>