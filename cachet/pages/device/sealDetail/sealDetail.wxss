/* pages/device/sealDetail/sealDetail.wxss */

.topView {
  width: 100%;
  height: 44px;
  background: white;
  position: fixed;
  display: flex;
  justify-content: flex-start;
  border-bottom: 1rpx solid #eee;
  text-align: center;
  /* align-items:center; */
}

.halfView {
  width: 50%;
  line-height: 44px;
  border-left: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
}

.listView {
  padding-top: 44px;
  width: 100%;
}

.row_right {
  height: 20px;
  width: 20px;
  position: fixed;
  float: right;
  right: 10px;
  margin-top: 26px;
}

.rightNumber {
  height: 20px;
  width: 20px;
  position: fixed;
  float: right;
  right: 40px;
  margin-top: 26px;
  border-radius: 10px;
  background: red;
  text-align: center;
  color: white;
}

.listItem {
  width: 100vw;
  height: 72px;
  background-color: white;
  display: flex;
  /* flex-direction: column; */
  border-bottom: 1rpx solid #eee;
}

.item {
  height: 24px;
  line-height: 24px;
  margin-left: 10px;
}

.black {
  color: #333;
}

.shenqingStatus {
  position: fixed;
  float: right;
  right: 40px;
  height: 44px;
  line-height: 44px;
  margin-left: 10px;
}

.detaiLItem {
  width: 100vw;
  border-bottom: 1rpx solid #eee;
  line-height: 40px;
  padding-left: 12px;
  display: flex;
  flex-wrap: wrap;
  background: white;
}

.cell {
  line-height: 40px;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #eee;
  background: white;
}

.cell .name {
  width: 60%;
  color: #333;
  margin-left: 12px;
}

.cell .delete {
  background: red;
  color: white;
  height: 26px;
  width: 40px;
  line-height: 26px;
  position: fixed;
  float: right;
  right: 12px;
  border-radius: 5px;
  margin-top: 7px;
  text-align: center;
}

.restart_right {
  height: 20px;
  width: 20px;
  position: fixed;
  float: right;
  right: 10px;
  margin-top: 10px;
}
