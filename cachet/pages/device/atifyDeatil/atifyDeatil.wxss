/* pages/device/atifyDeatil/atifyDeatil.wxss */

page {
  background: white;
}

.listItem {
  width: 100vw;
  /* height: 44px; */
  border-bottom: 1px solid #999;
  line-height: 44px;
  padding-left: 20px;
  display: flex;
  flex-wrap: wrap;
}

.item {
  height: 24px;
  line-height: 24px;
  margin-left: 10px;
}

.black {
  color: #333;
}

.listImage {
  width: 40px;
  height: 40px;
  margin-left: 10px;
  margin-top: 2px;
}

.selectBtn {
  color: white;
  background: red;
  height: 40px;
  width: 150px;
  border-radius: 5px;
  margin-top: 50px;
  line-height: 40px;
  text-align: center;
  margin-bottom: 50px;
}

.order_process {
  display: flex;
  flex-wrap: nowrap;
  padding: 10rpx 10rpx 20rpx 10rpx;
  background-color: #fff;
  border-bottom: 1px solid #999;
}

.process_wrap {
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
}

.process {
  display: flex;
  align-items: center;
  width: 100%;
}

.process_icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  text-align: center;
  line-height: 50rpx;
  color: white;
}

.process_line {
  background: #eff3f6;
  flex: 1;
  height: 5rpx;
}

.process_name {
  font-size: 24rpx;
}

.titleText {
  margin-top: 12px;
  margin-left: 20px;
  color: #333;
}

.modal {
  width: 540rpx;
  max-width: 540rpx;
  border-radius: 28rpx;
}

.modal.input-line {
  display: flex;
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  font-size: 28rpx;
  padding: 16rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.modalinput, .modal.text {
  display: inline-block;
  vertical-align: top;
}

.modal.input {
  flex: 1;
}

.modal.text {
  width: 90rpx;
  color: #ffa004;
}

.apply {
  display: flex;
  justify-content: space-around;
  margin-bottom: 50px;
}

.refuse {
  color: red;
  background: white;
  height: 40px;
  width: 80px;
  border-radius: 5px;
  margin-top: 80px;
  line-height: 40px;
  text-align: center;
  border: 1rpx solid red;
}

.selectView {
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.agree {
  color: white;
  background: red;
  height: 40px;
  width: 80px;
  border-radius: 5px;
  margin-top: 80px;
  line-height: 40px;
  text-align: center;
}

.refuseBtn {
  width: 80px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  border: 1px solid #999;
  color: #999;
  border-radius: 5px;
  margin-top: 80px;
}

.imageCell {
  display: flex;
  flex-direction: row-reverse;
  justify-content: flex-start;
  flex-wrap: wrap-reverse;
  margin-right: 24px;
}
