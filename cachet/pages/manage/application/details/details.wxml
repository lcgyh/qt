<!--pages/papplydetails/papplydetails.wxml-->
<view class='papply_box line'>
  <view class='papply_block'>
    <image src='/images/icon_list1.png' class='icon_box'/>
    <view class='papply_text'>
      <view class='title'>
        <text class='color666 font_size30'>{{detail.partyName}}</text>
        <text>{{detail.applyTime}}</text>
      </view>
      <view>{{detail.verifys}}</view>
      <view class='title2'>
        <text class='color666'>事由:</text>
        <text class='why'>{{detail.cause}}</text>
      </view>
      <view wx:if="{{detail.applyType=='使用申请'}}">
        <text class='color666'>次数:</text>
        <text>{{detail.times}}</text>
      </view>
      <view wx:if="{{detail.applyType=='外带申请'}}">
        <text class='color666'>使用时间:</text>
        <text>{{detail.takeStartTime}}{{detail.takeEndTime}}</text>
      </view>
    </view>
  </view>
  <view class='papply_block' wx:for="{{detail.verifys}}" wx:key="{{index}}">
    <image src='/images/icon_list2.png' class='icon_box'/>
    <view class='papply_text'>
      <view class='title'>
        <text class='color666 font_size30'>{{item.partyName}}</text>
        <text>{{item.time}}</text>
      </view>
      <view>{{item.verifys}}</view>
      <view class='title2'>
        <text class='color666'>审批状态:</text>
        <text class='colorgreen'>{{item.statusName}}</text>
      </view>
      <view wx:if="{{item.statusName=='拒绝'}}">
        <text class='color666'>{{}}拒绝原因:</text>
        <text class='colorred'>{{item.remark}}</text>
      </view>
      <view wx:if="{{item.statusName=='通过'}}">
        <text class='color666'>{{}}备注:</text>
        <text class='colorgreen'>{{item.remark}}</text>
      </view>
    </view>
  </view>
</view>